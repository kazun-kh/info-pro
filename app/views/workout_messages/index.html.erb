<%= render "shared/header" %>

  <div class="jumbo-workout-head">
  <div class="jumbo-content">
    <h1 class="display-4">Let's get started!</h1>
    <p class="lead">筋トレに関することなら何でも話しましょう！</p>
    <%= link_to 'Make a room',  new_workout_room_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>

  <div class="wrapper">
    <div class="side-bar">
    </div>

    <div class="chat">   
        <div class="chat-header"> 
          <%= form_with model: [@workout_room, @workout_message], class: 'form', local: true do |f| %>
        <div class="form-input">
          <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
          <label class="form-image">
            <span class="image-file">画像</span>
            <%= f.file_field :image, class: 'hidden' %>
          </label>
        </div>
        <%= f.submit '送信', class: 'form-submit' %>
      <% end %>

       </div> 
       </div>
      </div>
</div>

