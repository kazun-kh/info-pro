
<body class="text-center">
  <form class="form-signin">
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <img class="mb-4" src="/assets/protein-icon.png" alt="" width="150" height="150">
          <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>    
            
            

            <div class="field">
          <%= f.text_field :nickname,placeholder:"nickname" %>
            </div>
            <br />
            <div class="field-1">         
               <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email address" %>
            </div>
            <br/>
            <div class="field-2">
              <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password" %>
            </div>
            <div class="field">
              
              <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"password_confirmation" %>
            </div>
            
             <div class="field">
              <%= f.text_field :my_protein, class: :form__text,placeholder:"my_protein" %>
            </div>
            <br/>
            <div class="field">
              <%= f.text_area :profile, class: :form__text,placeholder:"profile" %>
            </div>


            <div class="actions">
              <%= f.submit "sign in", class: :form__btn  %>
            </div>
          <% end %>

  </form>
</body>
